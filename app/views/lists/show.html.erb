<%= render "navbar" %>
<div class="container">
  <div class="col-sm-8 offset-sm-2">
      <h1>Show movie list</h1>
      <h1><%= @list.name %></h1>
      <h2>Bookmarked Movies</h2>
      <ul>
        <% @bookmarks.each do |bookmark| %>
          <li>
            <strong>Movie:</strong> <%= bookmark.movie.title %> <br>
            <strong>Comment:</strong> <%= bookmark.comment %>
            <%= image_tag bookmark.movie.poster_url %>
            <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger text-white" %>
            <%= link_to "Edit bookmark", edit_list_bookmark_path(@list, bookmark), class: "btn btn-primary text-white" %>
        <% end %>
        </li>
      </ul>
      <%= link_to "Edit list", edit_list_path(@list), class: "btn btn-primary text-white" %>
      <%= link_to "All lists", lists_path, class: "btn btn-primary text-white" %>
      <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary text-white" %>
  </div>
</div>


